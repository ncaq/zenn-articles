{
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".md"]
    }
  },
  "filters": {
      "allowlist": {
          "allow": [

          ]
      }
  },
  "rules": {
    "preset-ja-technical-writing": {
        "no-exclamation-question-mark": {
        "allowFullWidthExclamation": true,
        "allowFullWidthQuestion": true,
      },
      "no-doubled-joshi": {
        "strict": false,
         "allow": ["か"], // 助詞のうち「か」は複数回の出現を許す
      },
    },
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": { // 半角文字と全角文字の間にスペースを入れるかどうか
        space: "always",
        exceptPunctuation: true,
      },
      "ja-space-around-code": { // インラインコードの周りにスペースを入れるかどうか
        "before": true,
        "after": true
      }
    },
    "ja-technical-writing/ja-no-mixed-period": {
      "allowPeriodMarks": [":"], // 文末の句点記号として「:」を許可する
    },
    "ja-technical-writing/sentence-length": false, // 文字制限するかどうか
    "spellcheck-tech-word": true  // スペルチェッカーを有効にするかどうか
  }
}